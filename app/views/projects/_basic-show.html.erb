<div class="container">
  <div class= "px-5 pt-5 d-flex flex-row align-items-center">
     <div class="card-logo">
        <%= image_tag project.charity.logo %>
      </div>

      <div class="d-flex justify-content-between flex-grow-1">
        <div class="card-titles d-flex flex-column ml-4 py-5 ml-5">
          <h2 class="m-0">
            <%= project.name %>
          </h2>
          <p><%= project.charity.name %></p>
        </div>
          <%= link_to favorite_project_path(project) do %>
          <% if project.status == "preselected" && current_user.admin %>
            <i class="fas fa-star"></i>
          <% elsif current_user.admin %>
            <i class="far fa-star"></i>
          <% end %>
        <% end %>
      </div>

  </div>


  <div class="row m-0">
    <div class="col p-5">

      <h4 class="mb-4">Détails de la mission:</h4>
      <%= project.description %>
    </div>

    <hr class="vertical-line-show"/>

    <div class="col p-5">
      <div class="card-tags">
        <div class="d-flex flex-column">
          <div>
            <p>Compétences</p>
            <div class="d-flex flex-row">
              <% project.tag_list.first(3).each do |tag| %>
                <span class="badge-coconut">
                  <%= link_to tag.capitalize, tagged_path(tag: tag) %>
                </span>
              <% end %>
            </div>
          </div>
          <div>
            <div class="d-flex flex-row justify-content-between mt-3">
              <div>
                <p>Délai</p>
                <p class="project-figures">
                  <span>moyen</span> terme
                </p>
              </div>
              <div>
                <p>Durée estimée</p>
                <p class="project-figures">
                  <span>10</span>h
                </p>
              </div>
            </div>
          </div>
          <div class=" mt-3">
            <%= render 'projects/employees', employees: employees %>
          </div>
          <div class="d-flex flex-row justify-content-start mt-3">
            <% if current_user.credits.nil? || current_user.credits == 0 %>
                <p class="mt-5 mini-card">
                  Pas de crédit disponible
                </p>
            <% elsif !current_user.projects.include? @project %>
              <button type="button" class="btn btn-dashboard" data-toggle="modal" data-target="#exampleModal">
                Postuler
              </button>
            <% end %>
            <%= render 'reservations/credits' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


