
<div class="container">
  <div class= "my-5 d-flex flex-row align-items-center">
     <div class="card-logo">
        <%= image_tag project.charity.logo %>
      </div>

      <div class="d-flex justify-content-between flex-grow-1">
        <div class="card-titles d-flex flex-column ml-4">
          <h2 class="m-0">
            <%= project.name %>
          </h2>
          <p><%= project.charity.name %></p>
        </div>
          <%= link_to favorite_project_path(project) do %>
          <% if project.status == "preselected" && current_user.admin %>
            <i class="fas fa-star"></i>
          <% elsif current_user.admin %>
            <i class="far fa-star"></i>
          <% end %>
        <% end %>
      </div>

  </div>

  <div class="row">
    <div class="col">

      <h4>D√©tails de la mission:</h4>
      <%= project.description %>
    </div>


    <hr class="vertical-line-show"/>

    <div class="col">
<!--       <h2 class="m-5"> üëâ informations utiles </h2> -->

      <div class="card-tags mx-5">
        <div class="d-flex flex-column">
          <div>
            <p>Comp√©tences</p>
            <div class="d-flex flex-row">
              <% project.tag_list.first(3).each do |tag| %>
                <span class="badge">
                  <%= link_to tag.capitalize, tagged_path(tag: tag) %>
                </span>
              <% end %>
            </div>
          </div>
          <div>
            <div class="d-flex flex-row justify-content-between mt-3">
              <div>
                <p>D√©lai</p>
                <p class="project-figures">
                  <span>moyen</span> terme
                </p>
              </div>
              <div>
                <p>Dur√©e estim√©e</p>
                <p class="project-figures">
                  <span>10h</span>
                </p>
              </div>
            </div>
          </div>
          <div class=" mt-3">
            <%= render 'projects/employees', employees: employees %>
          </div>
          <div class="d-flex flex-row justify-content-start mt-3">
            <% if current_user.credits.nil? || current_user.credits == 0 %>
                <p class="mt-5 mini-card">
                  Pas de cr√©dit disponible
                </p>
            <% elsif !current_user.projects.include? @project %>
                <%= link_to 'Postuler', new_project_reservation_path(project), class: 'btn btn-ghost' %>
            <% end %>

          </div>


        </div>
      </div>
    </div>
  </div>
</div>


