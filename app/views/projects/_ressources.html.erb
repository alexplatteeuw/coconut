<div class="container">
  <div class="d-flex justify-content-around">
      <div class="card_ressource">

        <div class="text-center mt-3 mb-5" >
          <h2>Ajouter une ressource</h2>
          <p><i>Partagez un fichier csv, jpg ou pdf</i></p>
        </div>

        <div class="d-flex justify-content-center ml-5 mt-5">
          <%= simple_form_for(project) do |f| %>
          <%= f.input :documents, as: :file, input_html:{multiple: true}, label: false %>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <%= f.button :submit, "Télécharger", class: "btn btn-primary" %>
         </div>
        <% end %>
      </div>
      <div class="card_ressource">
          <div class="text-center mt-3" >
            <h2>Télécharger une ressource</h2>
          </div>
        <% @project.documents.each do |doc| %>
          <h4>
            <i class="fas fa-file-download"></i>
            <%= link_to rails_blob_path(doc, disposition: "attachment"), target: "_blank" do %>
            <% end %>
            <%= link_to("#{doc.filename}", rails_blob_path(doc, disposition: 'attachment'))  %>
          </h4>
        <% end %>
      </div>
  </div>
</div>
