<div class="card-product my-5">
  <div class="card-image" style="background-image: linear-gradient(rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73)), url('<%= image_path 'resto.jpg' %>');">
  </div>
  <div class="card-product-infos">
    <h2>
      <%= project.name %>
    </h2>
    <p class="card-description">
      <%= project.description %>
    </p>
  </div>
  <div class="card-tags">
    <div class="badges">
      <% project.tag_list.first(3).each do |tag| %>
        <span class="badge">
          <%= link_to tag.capitalize, tagged_path(tag: tag) %>
        </span>
      <% end %>
    </div>
  </div>
</div>
