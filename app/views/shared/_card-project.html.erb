<div class="card card-body card-category">
  <div class="card-image" style="background-image: linear-gradient(rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73)), url('<%= image_path 'resto.jpg' %>');">
  </div>
  <div class="badges">
    <% project.skill_list.each do |skill| %>
      <span class="badge badge-<%= %w(primary secondary success warning info).sample %>">
        <%= skill %>
      </span>
    <% end %>
  </div>
  <div class="text-center">
    <h3 class="pt-2">
      <%= project.name %>
    </h3>
    <p>
      <%= project.description %>
    </p>
  </div>
  <%= link_to "Show more", project_path(project), class: "text-secondary" %>

  <hr class="m-0">

  <div class="d-flex justify-content-around align-items-center pt-4 ">
    <p class="mb-0">6 heures</p>
    <div class="d-flex justify-content-start" >
      <%= image_tag "clem.jpg", class: "avatar", alt: "avatar" %>
      <%= image_tag "alex.jpg", class: "avatar", alt: "avatar" %>
      <%= image_tag "max.jpg", class: "avatar", alt: "avatar" %>
    </div>
  </div>
</div>
