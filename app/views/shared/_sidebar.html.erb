<% unless current_user.nil? %>
  <div id="sidebar">
    <div id="sidebar-container">

      <div class="d-flex flex-column align-items-center">
        <div class="logosb my-3">
          <%= link_to current_user.company.name.upcase, root_path %>
        </div>
        <%= image_tag current_user.avatar_url, id: "avatar" %>
        <% if current_user.admin? %>
          <p><%= current_user.first_name %></p>
          <p>-<%= current_user.job%>-</p>
          <%= link_to 'Dashboard', dashboard_path, class:"btn btn-dashboard my-4" %>
        <% end %>
      </div>

      <ul class="sidebar-brand">
        <li>
          <i class="icons pr-3 fa fa-list" aria-hidden="true"></i>
          <%= link_to 'Tous les projets', projects_path %>
        </li>
        <% if current_user.admin? %>
          <li>
            <i class="icons pr-3 fa fa-check" aria-hidden="true"></i>
            <%= link_to 'Projets retenus', favorites_path %>
          </li>
        <% else %>
          <li>
            <i class="icons pr-3 fa fa-bookmark-o" aria-hidden="true"></i>
            <%= link_to 'Mes projets', my_projects_path %>
          </li>
        <% end %>
        <% if current_user.admin? %>
          <li>
            <i class="icons pr-3 fa fa-users" aria-hidden="true"></i>
            <%= link_to 'EmployÃ©s', root_path %>
          </li>
        <% end %>
        <li>
          <i class="icons pr-3 fa fa-ellipsis-h" aria-hidden="true"></i>
          <%= link_to 'Mes documents', root_path %>
        </li>
      </ul>

      <div class="d-flex flex-column align-items-center">
        <div class="pt-4" id="sign-out">
          <% if current_user %>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <div>
    <div id="sidebarCollapse" class="btn">
      <i class="fas fa-bars"></i>
    </div>
  </div>
<% end %>

