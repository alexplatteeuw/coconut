<% unless current_user.nil? %>
  <div id="sidebar">
    <div id="sidebar-container" class="d-flex flex-column justify-content-between">
      <div>

      <div class="d-flex flex-column align-items-center">
        <div class="logosb my-3">
          <%= link_to image_tag('COCONUT.png', width: 170, class: "p-3"), dashboard_path %>
        </div>
        <%= image_tag current_user.avatar_url, id: "avatar" %>

          <h2><%= current_user.first_name %></h2>
          <p><%= current_user.job %></p>
          <p><i class="fas fa-briefcase"></i> <%= current_user.company.name %></p>

      </div>

      <div class="d-flex justify-content-between">
        <ul class="sidebar-brand mt-5">
          <li class="<%= 'active' if current_page?(dashboard_path) %>">
            <i class="icons pr-3 fas fa-tachometer-alt" aria-hidden="true"></i>
            <%= link_to 'Dashboard', dashboard_path, class:"" %>
          </li>
          <li class="<%= 'active' if current_page?(projects_path) %>">
            <i class="icons pr-3 fa fa-list" aria-hidden="true"></i>
            <%= link_to 'Tous les projets', projects_path %>
          </li>
          <% if current_user.admin? %>
            <li class="<%= 'active' if current_page?(favorites_path) %>">
              <i class="icons pr-3 fa fa-check" aria-hidden="true"></i>
              <%= link_to 'Projets retenus', favorites_path %>
            </li>
          <% else %>
            <li class="<%= 'active' if current_page?(my_projects_path) %>">
              <i class="icons pr-3 far fa-bookmark" aria-hidden="true"></i>
              <%= link_to 'Mes projets', my_projects_path %>
            </li>
          <% end %>
          <% if current_user.admin? %>
            <li class="<%= 'active' if current_page?(employees_path) %>">
              <i class="icons pr-3 fa fa-users" aria-hidden="true"></i>
              <%= link_to 'Employés', employees_path %>
            </li>
          <% end %>
          <% if current_user.admin? %>
            <li class="<%= 'active' if current_page?(completed_projects_path) %>">
              <i class="icons pr-3 fas fa-clipboard-check" aria-hidden="true"></i>
              <%= link_to 'Projets terminés', completed_projects_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="pb-4 text-center" id="sign-out">
      <% if current_user %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

  <div>
    <div id="sidebarCollapse" class="btn">
      <i class="fas fa-chevron-left"></i>
    </div>
  </div>
<% end %>

