<div class="message-container" id="message-<%= message.id %>">
  <%= image_tag message.user.avatar_url %>
  <div class="message-content">
    <p>
      <strong>
        <%= message.user.first_name %>
      </strong>
    </p>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
    <p><%= message.content %></p>
  </div>
</div>
