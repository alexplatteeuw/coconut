<div class="message-container <%= "current-user" if message.user == current_user %>" id="message-<%= message.id %>">
  <div>
    <%= image_tag message.user.avatar_url %>
    <div class="message-details">
     <!-- ajouter sur cette classe le background color, border-radius, padding, width Ã  100% -->
        <div class="message-content">
          <p><strong><%= message.user.first_name %></strong></p>
          <p><%= message.content %></p>
        </div>
        <p class="msg-date"><%= message.created_at.strftime("%b %e at %l:%M%p") %></p>
    </div>
  </div>
</div>
